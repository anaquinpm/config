[user]
	name = Pablo Martín Anaquín
	email = anaquinpm@gmail.com
[core]
	editor = vim
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
    conflictstyle = diff3
[help]
	autocorrect = 20
[alias]
	ll = log --oneline --graph --decorate --all
	st = status -sb
	last = log -1 HEAD --stat
	cm = commit -m
	dv = difftool -t vimdiff -y
	se = !git rev-list --all | xargs git grep -F
        los = log --oneline --graph --decorate --all --stat
	mr = push -u origin HEAD
[init]
	defaultBranch = main
